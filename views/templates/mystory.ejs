<div class="container">
<div class="row"><div class = "col"><h2>Hello <%= users[0].name %></h2></div><div class = "col"><button id='Refreshstory' class="btn btn-outline-success my-2 my-sm-0" onclick="loadtwo()"><img src="data:image/png;base64,"></button></div></div>
	<div class="row">
		<div class = "col">
		<h3>New Story</h3>
	    <form id="myStory">
	        <div class="form-group">
	            <input id='ms_title' type="text" placeholder="Enter Post Title:" name="title">
	        </div>
	        <div class="form-group">
	            <textarea rows="10" id='ms_post' type="text" placeholder="Enter Post:" name="post" style="min-width: 100%"></textarea>
	        </div>    
	    </form>
	    <button class="btn btn-primary" onclick="loadNewPost()">Submit Story</button>
		</div>
		<div class = "col" id = "stories" >
		<h3>Stories </h3>
		<div style="height: 400px;max-height: 96%;overflow: auto;background: ivory;">
		<br />
		    <% for(i=posts.length-1; i >= 0; i--){ %>
			<h4><%= posts[i].title %></h4>
			<p><%= posts[i].post %></p>
			<button id='delete' class="btn btn-outline-success my-2 my-sm-0" onclick="editapost('<%= posts[i]._id %>')">Edit</button>
			<button id='delete' class="btn btn-outline-success my-2 my-sm-0" onclick="deleteapost('<%= posts[i]._id %>')">Delete</button>
			<br />
			<hr>
			<% } %>
		</div>
	    </div>
	</div>
</div>
